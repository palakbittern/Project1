
<h2>Books form </h2>

<table class="table">
  <tr>
    <th>Category_id</th>
    <th>Name</th>
    <th>Author</th>
    <th>Price</th>
    <th>Image</th>
    <th colspan="5">Actions</th> 
  </tr>
 
  <% @books.each do |book| %>

    <tr>
      <td><%= book.category_id %></td>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.price %></td>
      <td><%= image_tag(book.image.url, size: "90x90") %></td>
       <%#= image_tag(book.image.url, size: "100x100")%>

      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>   

      <td><%= link_to 'Destroy', books_delete_path(book),
              method: :DELETE,
              data: { confirm: 'Are you sure?' } %></td>

           
    </tr>
  <% end %>
</table>
<%= will_paginate @books %>